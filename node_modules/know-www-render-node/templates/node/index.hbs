<div id="legalTermDetail">
  <h2 id="title">{{title}}</h2>
  <div>
    <a href="{{treeUrl}}" rel="nofollow" data-i18n="term.showInTree">
      Zobraziť pojem v strome
    </a>

    <small class="pull-right">
      <span data-i18n="term.domain">Domain</span>:
      <span data-i18n="domains.{{domain}}">{{domain}}
    </small>
  </div>

  {{#each sections as |section sectionId|}}
    <div class="panel panel-info">
        <div class="panel-heading">
          <h4 class="panel-title" data-i18n="term.sectionTitles.{{section.title}}">
            {{section.title}}
          </h4>
        </div>
        <div class="panel-body legal-term-description">
          {{ section.content }}
        </div>
    </div>
  {{/each}}

  <div class="sep"></div>

  <h4>
    <span data-i18n="term.related">Súvisiace pojmy</span>:
  </h4>
  <div class="text">
    {{#if neighborhood.parent}}
      <div>
        <span data-i18n="term.parent">Nadradený pojem</span>:
        <ul>
          <li><a href="{{neighborhood.parent.url}}">{{neighborhood.parent.title}}</a></li>
        </ul>
      </div>
    {{/if}}

    {{#if neighborhood.children}}
        <div>
            <span data-i18n="term.children">Podradené pojmy</span>:
            <ul>
                {{#each neighborhood.children as |child childId|}}
                    <li><a href="{{ child.url }}">{{ child.title }}</a></li>
                {{/each}}
            </ul>
        </div>
    {{/if}}

    {{#if neighborhood.siblings}}
        <div>
            <span data-i18n="term.siblings">Susedné pojmy</span>:
            <ul>
                {{#each neighborhood.siblings as |sibling siblingId|}}
                    <li><a href="{{ sibling.url }}">{{ sibling.title }}</a></li>
                {{/each}}
            </ul>
        </div>
    {{/if}}
  </div>
</div>